    <h2>Operaciones</h2>
    <button onclick="mostrar()">Mostrar Datos</button>
    <button onclick="borrar()">Borrar Datos</button>
    <button onclick="insertar()">Insertar Datos</button>

    <h3>Resultados:</h3>
    <pre id="resultado"></pre>

    <script>
        async function mostrar() {
            const response = await fetch('/mostrar', { method: 'GET' });
            const data = await response.text();
            document.getElementById('resultado').textContent = data;
        }

        async function borrar() {
            const response = await fetch('/borrar', { method: 'DELETE' });
            const data = await response.text();
            document.getElementById('resultado').textContent = data;
        }

        async function insertar() {
            const response = await fetch('/Insertar', { method: 'POST' });
            const data = await response.text();
            document.getElementById('resultado').textContent = data;
        }
    </script>
